{
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "prettier/prettier": "error",
        "no-console": 0,
        "comma-dangle": 0,
        "eqeqeq": "warn",
        "no-cond-assign": 0,
        "no-unused-vars": "warn",
        "no-extra-semi": "warn",
        "no-unexpected-multiline": "warn",
        "prefer-const": "warn",
        "semi": "warn",
        "react/react-in-jsx-scope": "off",
        "react/jsx-uses-react": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        ]
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react",
        "prettier"
    ]
}